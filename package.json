    "@nestjs/throttler": "^6.5.0",
    "@sentry/cli": "^2",
    "@sentry/nestjs": "^10.32.1",
    "bullmq": "^5.66.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^17.2.3",
